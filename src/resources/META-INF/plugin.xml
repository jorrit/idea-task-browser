<idea-plugin version="2">
    <name>wide-task-browser</name>
    <description>Displays complete task list</description>
    <version>0.1</version>
    <vendor>ol-loginov</vendor>
    <idea-version since-build="8000"/>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.tasks</depends>

    <resource-bundle>org.github.olloginov.ideataskbrowser.TaskBrowserBundle</resource-bundle>

    <application-components>
    </application-components>

    <project-components>
        <component>
            <implementation-class>org.github.olloginov.ideataskbrowser.TaskBrowserNotifier</implementation-class>
        </component>
    </project-components>

    <actions>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="TaskBrowser" anchor="bottom" icon="/general/moreTabs.png"
                    factoryClass="org.github.olloginov.ideataskbrowser.ToolWindowFactory"/>
        <projectService serviceInterface="org.github.olloginov.ideataskbrowser.TaskBrowser"
                        serviceImplementation="org.github.olloginov.ideataskbrowser.TaskBrowserWindow"/>
    </extensions>

</idea-plugin>